<!-- As a heading -->
<nav class="navbar navbar-light bg-light">
  <span class="navbar-brand mb-0 h1">Gerenciador de Tarefas</span>
 </nav>

<h1>Tarefas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Inicio</th>
      <th>Previsao</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tarefas.each do |tarefa| %>
      <tr>
        <td><%= tarefa.nome %></td>
        <td><%= tarefa.descricao %></td>
        <td><%= tarefa.inicio %></td>
        <td><%= tarefa.previsao %></td>
        <td><%= tarefa.status %></td>
       <!-- <td><%= link_to 'Mostrar', tarefa, :class => 'button1' %></td> -->
        <td><%= link_to 'Editar', edit_tarefa_path(tarefa) , :class => 'button2'%></td>
        <td><%= link_to 'Excluir', tarefa, method: :delete, data: { confirm: 'Are you sure?' } , :class => 'button3'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h3>
<%= link_to '+', new_tarefa_path , :class => 'button'%>
</h3>